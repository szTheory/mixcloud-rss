- dev = settings && settings.mode === "development"
!!! 5
html
	head
		base(href=settings.url)
		meta(charset="utf-8")
		meta(name="description", content=settings.description)
		meta(name="author", content=settings.author)
		title=settings.title

		if dev
			link(rel="stylesheet", href="stylesheets/bootstrap.css")
		else
			link(rel="stylesheet", href="stylesheets/bootstrap.min.css")

		link(rel="stylesheet", href="stylesheets/custom.css")

		if dev
			script(type="text/javascript", src="javascripts/jquery.js")
			script(type="text/javascript", src="javascripts/bootstrap.js")
		else
			script(type="text/javascript", src=settings.jQueryCdnUrl)
			script(type="text/javascript", src="javascripts/bootstrap.min.js")

		if typeof home !== "undefined"
			script(type="text/javascript", src="javascripts/custom.js")

	body
		.navbar.navbar-fixed-top
			.navbar-inner
				.container
					a.brand Mixcloud RSS
					.nav-collapse
						ul.nav
							li
								a(href="https://github.com/szTheory/mixcloud-rss-personal") GitHub

		.container
			!= body
